<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_imagenPerfil_perfilTab"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="85dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"/>

    <Button
        android:id="@+id/btn_perfil_perfilTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_imagenPerfil_perfilTab"
        android:layout_marginLeft="75dp"
        android:text="@string/btnPerfil" />

    <Button
        android:id="@+id/btn_ajustes_perfilTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_imagenPerfil_perfilTab"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/btn_perfil_perfilTab"
        android:text="@string/btnAjus" />
</RelativeLayout>